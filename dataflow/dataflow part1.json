{
	"name": "dataflow part1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_source_emp_csv_v2",
						"type": "DatasetReference"
					},
					"name": "sourceemp"
				},
				{
					"dataset": {
						"referenceName": "DS_soruce_dept_v2_mapping",
						"type": "DatasetReference"
					},
					"name": "sourcedept"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_sink_mapping",
						"type": "DatasetReference"
					},
					"name": "sink"
				}
			],
			"transformations": [
				{
					"name": "join1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as string,",
				"          name as string,",
				"          dpid as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: true,",
				"     inferDriftedColumnTypes: true,",
				"     ignoreNoFilesFound: false) ~> sourceemp",
				"source(output(",
				"          dpid as string,",
				"          dpname as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourcedept",
				"sourceemp, sourcedept join(id == ERROR_FUNCTION(''),",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> join1",
				"join1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     mapColumn(",
				"          id,",
				"          name,",
				"          dpname",
				"     )) ~> sink"
			]
		}
	}
}